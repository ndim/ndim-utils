# -*- Makefile -*-

EXTRA_DIST  += misc-scripts/bing
bin_SCRIPTS += misc-scripts/bing

EXTRA_DIST  += misc-scripts/watch-xsel.in
bin_SCRIPTS += misc-scripts/watch-xsel
CLEANFILES  += misc-scripts/watch-xsel
misc-scripts/watch-xsel: misc-scripts/watch-xsel.in
	$(MKDIR_P) misc-scripts
	$(SED) \
		-e 's|[@]PACKAGE_NAME[@]|$(PACKAGE_NAME)|g' \
		-e 's|[@]PACKAGE_VERSION[@]|$(PACKAGE_VERSION)|g' \
		< $(srcdir)/misc-scripts/watch-xsel.in > misc-scripts/watch-xsel

