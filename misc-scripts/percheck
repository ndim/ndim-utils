#!/bin/bash
#
# Syntax: percheck file1 file2 ...
#
# displays permissions of all files and all directories above
#

notfirstone=false
while :; do
	file="$1"
	if shift; then :; else break; fi
	if "$notfirstone"; then
		echo
	fi
	notfirstone=:
	if test ! -e "$file"; then
		echo "percheck: file or directory not found: ${file}" >&2
		continue
	fi
	case "$file" in
		/*)
			;;
		*)
			file="$PWD/${file}" ;;
	esac
	declare -a files
	files=()
	n=0
	while :; do
		files[$n]="$file"
		if [ "$file" = "/" ]; then break; fi
		file="$(dirname "$file")"
		n="$[ $n + 1 ]"
	done
	ls -ald "${files[@]}"
done

