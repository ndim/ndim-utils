%reldir%/watch-xsel.1: %reldir%/watch-xsel.1.in $(PACKAGE_SUBST_DEP)
	$(PACKAGE_SUBST) $(srcdir)/%reldir%/watch-xsel.1.in %reldir%/watch-xsel.1

TEST_EXTENSIONS += .sh
SH_LOG_COMPILER = /bin/sh
AM_SH_LOG_FLAGS = -x

