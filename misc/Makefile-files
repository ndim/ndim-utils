# -*- Makefile -*-

bin_PROGRAMS     += misc/one
misc_one_SOURCES  = misc/one.c

man_MANS   += misc/one.1
CLEANFILES += misc/one.1
EXTRA_DIST += misc/one.1.in
misc/one.1: misc/one.1.in
	$(MKDIR_P) misc
	$(SED) \
		-e 's|[@]OUTFILE[@]|stderr|g' \
		-e 's|[@]PACKAGE_NAME[@]|$(PACKAGE_NAME)|g' \
		-e 's|[@]PACKAGE_VERSION[@]|$(PACKAGE_VERSION)|g' \
		< $(srcdir)/misc/one.1.in > misc/one.1
